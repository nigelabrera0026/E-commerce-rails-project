<!-- app/views/products/index.html.erb -->
<div class="container mt-3">
  <h1 class="text-center mb-4">Our Products</h1>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="">
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Category</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @product_categories.each do |product_category| %>
          <tr>
            <td>
              <% if product_category.image.attached? %>
                <%= image_tag product_category.image, class: 'img-fluid', width: '100' %>
              <% else %>
                No image available
              <% end %>
            </td>
            <td><%= link_to product_category.product.name, product_category_path(product_category) %></td>
            <td><%= product_category.category.name %></td>
            <td><%= number_to_currency(product_category.price) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="pagination justify-content-center">
    <%= paginate @product_categories %>
  </div>
</div>
